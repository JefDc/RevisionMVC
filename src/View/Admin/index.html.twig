{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="text-center">Liste des utilisateurs</h1>

    <div class="container">
        <table class="table table-hover table-striped">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.password }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}